<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">#1f3d7a</item>
        <item name="android:navigationBarColor">#1f3d7a</item>
        <item name="android:statusBarColor">#1f3d7a</item>
        <item name="android:textColor">#000</item>
        <item name="android:colorAccent">#000</item>
        <item name="android:colorButtonNormal">#ffffff</item>
    </style>

    <style name="list_view_buttons">
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:layout_below">@+id/main_fragment</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="overview_textviews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/overview_textviews</item>
    </style>


</resources>
